{
    "name": "islandora/islandora_install_profile_demo",
    "description": "Collection of Islandora D8 Profiles",
    "type": "drupal-profile",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        },
        {
            "name": "Hertzel Armengol",
            "role": "Owner",
            "email": "hertzel@born-digital.com"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "library/openseadragon",
                "version": "2.4.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/openseadragon/openseadragon/releases/download/v2.4.2/openseadragon-bin-2.4.2.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "library/pdf.js",
                "version": "2.4.456",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/mozilla/pdf.js/releases/download/v2.4.456/pdfjs-2.4.456-dist.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "mjordan/islandora_workbench_integration",
                "version": "1.0",
                "type": "drupal-module",
                "source": {
                    "url": "https://github.com/mjordan/islandora_workbench_integration.git",
                    "type": "git",
                    "reference": "main"
                }
            }
        },
        {
            "type": "path",
            "url": "assets/sites/all/modules/custom",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "assets/sites/all/themes/custom",
            "options": {
                "symlink": true
            }
        },
        {
            "type": "path",
            "url": "assets/sites/all/profiles",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": ">=7.2",
        "islandora/islandora_starter_theme": "*",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^2.4",
        "drupal/adminimal_theme": "1.x-dev",
        "drupal/at_tools": "3.x-dev",
        "drupal/audit_log": "^2.0@alpha",
        "drupal/auto_entitylabel": "^3.0@beta",
        "drupal/backup_migrate": "^4.1",
        "drupal/bootstrap_barrio": "5.x-dev",
        "drupal/conditional_fields": "1.x-dev",
        "drupal/config_distro_filter": "1.0-alpha4",
        "drupal/config_ignore": "3.x-dev",
        "drupal/config_profile": "1.x-dev",
        "drupal/config_provider": "2.x",
        "drupal/config_split": "1.7",
        "drupal/config_suite": "1.x-dev",
        "drupal/config_update": "1.x-dev",
        "drupal/console": "^1.9",
        "drupal/content_browser": "^1.0@alpha",
        "drupal/content_sync": "2.x-dev",
        "drupal/core-composer-scaffold": "^8.9",
        "drupal/core-recommended": "^8.9",
        "drupal/devel": "^2.1",
        "drupal/devel_entity_updates": "3.x-dev",
        "drupal/devel_php": "^1.3",
        "drupal/entity_log": "^1.2",
        "drupal/environment_indicator": "4.x-dev",
        "drupal/facets": "1.7",
        "drupal/features": "^3.11",
        "drupal/fontawesome": "^2.17",
        "drupal/hook_post_action": "^1.0",
        "drupal/jwt": "^1.0@beta",
        "drupal/layout_library": "1.x-dev",
        "drupal/libraries": "3.x-dev",
        "drupal/libraries_ui": "^1.0",
        "drupal/masonry": "1.x-dev",
        "drupal/matomo": "^1.7",
        "drupal/metatag": "1.x-dev",
        "drupal/name": "^1.0@RC",
        "drupal/paragraphs": "^1.10",
        "drupal/pathauto": "^1.0",
        "drupal/pdf": "1.x-dev",
        "drupal/quicktabs": "^3.0@alpha",
        "drupal/rdfui": "^1.0-beta1",
        "drupal/redirect": "1.x-dev",
        "drupal/rest_oai_pmh": "^1.0",
        "drupal/restui": "^1.16",
        "drupal/search_api_autocomplete": "^1.3",
        "drupal/search_api_solr": "4.1.10",
        "drupal/simple_sitemap": "3.x-dev",
        "drupal/svg_image_field": "2.0.x-dev",
        "drupal/transliterate_filenames": "^1.3",
        "drupal/views_bulk_operations": "^3.9",
        "drupal/views_field_view": "^1.0@beta",
        "drupal/views_flipped_table": "^1.3",
        "drush/drush": "^9.7",
        "islandora-rdm/islandora_fits": "dev-master",
        "islandora/islandora_defaults": "dev-8.x-1.x",
        "islandora/openseadragon": "dev-8.x-1.x",
        "mjordan/islandora_workbench_integration": "1.0",
        "oomphinc/composer-installers-extender": "^2",
        "vlucas/phpdotenv": "4.2.0",
        "webflo/drupal-finder": "^1.2",
        "wikimedia/composer-merge-plugin": "^2.0",
        "zaporylie/composer-drupal-optimizations": "^1.2"
    },
    "require-dev": {
        "drupal/core-dev": "^8.9",
        "drupal/twig_xdebug": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true,
        "discard-changes": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "@create-symlinks",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "@create-symlinks",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "create-symlinks": [
            "mkdir -p web/sites/all/assets/vendor && ln -sf /var/www/drupal/web/libraries/openseadragon web/sites/all/assets/vendor/",
            "mkdir -p web/sites/default/files/library-definitions",
            "cp web/modules/contrib/openseadragon/openseadragon.json web/sites/default/files/library-definitions"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2",
            "islandora/islandora": "-p2",
            "islandora/islandora_defaults": "-p2"
        },
        "patches": {
            "drupal/term_reference_tree": {
                "Fixes toURL on null error": "https://www.drupal.org/files/issues/2019-07-30/term_reference_tree-3071428-2.patch"
            },
            "drupal/features" : {
                "Prevent WSOD when loading an invalid feature": "./assets/patches/tasks_24551412_-_fixed_features_wsod.patch"
            },
            "drupal/core" : {
                "Fix the issue where COLOR settings are seemingly reverted with deploys": "https://www.drupal.org/files/issues/2021-02-28/2995825-52.patch"
            }
        },
        "merge-plugin": {
            "recurse": true,
            "merge-dev": true,
            "include": [
                "web/modules/contrib/masonry/composer.libraries.json",
                "web/modules/contrib/select2/select2.libraries.json"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "symlink": true,
            "overwrite": true,
            "file-mapping": {
                "[web-root]/.editorconfig": ".editorconfig",
                "[web-root]/.gitattributes": ".gitattributes",
                "[web-root]/sites/default/default.settings.php": "assets/sites/default/default.settings.php",
                "[web-root]/sites/default/settings.local.php": "assets/sites/default/settings.local.php",
                "[web-root]/sites/default/development.services.yml": "assets/sites/default/development.services.yml"
            }
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-module-custom"
            ],
            "web/modules/bd/{$name}": [
                "type:drupal-module-bd"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-theme-custom"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/profiles/{$name}": [
                "type:drupal-profile-custom"
            ]
        }
    }
}
